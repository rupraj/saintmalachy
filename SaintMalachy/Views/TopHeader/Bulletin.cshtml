@model SaintMalachy.Models.BulletinModel
@{
    ViewBag.Title = "Bulletin";
}
<div class="container row">
    <div class="col-md-12 paddingRemoveLeft">
        <h3>Latest Bulletins</h3>
        <hr />
        <p>
            When on Summer Schedule, Bulletin is every other week
        </p>
        <div id="bulletinList" class="bulletinContainer">
            @foreach(var item in Model.Bulletins)
            {
                <div class="bulletinItem">
                    <div>
                        <b>@item.bulletinTitle</b>
                    </div>
                    <div class="bulletinImageContainer">
                        <a href="@item.bulletinPdfUrl" target="_blank">
                            <img src="@item.bulletinImageUrl"/>
                        </a>
                    </div>
                </div>
            }
        </div>
        @*<div id="bulletinList" class="bulletinContainer">
            <h1><a href="https://www.thebostonpilot.com/bcd/web_bulletin.asp?ektronid=4460" target="_blank">Click here for Bulletins</a></h1>
        </div>*@
    </div>
</div>
