
@{
    ViewBag.Title = "Race For Grace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row">

    <div class="col-md-12 text-left paddingleftremove">
        <h2>Race For Grace</h2>
        <hr />
        <div >
            <form class="form-horizontal paddingleftremove" id="raceForGrace" method="get">
                <div class="form-group">
                    <label for="FirstName" class="col-md-3 control-label textAlignForm labelWidth">First Name<span class="error">*</span>:</label>
                    <div class="col-md-6 controlWidth">
                        <input class="form-control" name="FirstName" id="FirstName" placeholder="First Name" type="text" required />
                    </div>
                    <label for="LastName" class="col-md-3 control-label textAlignForm labelWidth">Last Name<span class="error">*</span>:</label>
                    <div class="col-md-6 controlWidth">
                        <input class="form-control" name="LastName" id="LastName" placeholder="Last Name" type="text" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="EmailAddress" class="col-md-3 control-label textAlignForm labelWidth">Email Address:</label>
                    <div class="col-md-6 controlWidth">
                        <input class="form-control" name="EmailAddress" id="EmailAddress" placeholder="Email Address" type="text" />
                    </div>
                    <label for="DateOfBirth" class="col-md-3 control-label textAlignForm labelWidth">Birth Date<span class="error">*</span>:</label>
                    <div class="col-md-6 controlWidth">
                        <input class="form-control" name="DateOfBirth" id="DateOfBirth" placeholder="Birth Date" type="text" required />
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="Interest" class="col-md-3 control-label textAlignForm">Interest:</label>
                   
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" name="interest" value="I would like to be Confirmed" />I would like to be Confirmed</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" name="interest" value="I would like to learn more about our Catholic Faith" />I would like to learn more about our Catholic Faith</label>
                </div>
                <div style="margin-top:5px">
                    <button id="Submit" type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
            <div class="row" style="margin-top:10px;">
                <a href="@Url.Action("Index","pdf")"><h3>Click Here to download Pdf form</h3></a>
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/bundles/misc")
